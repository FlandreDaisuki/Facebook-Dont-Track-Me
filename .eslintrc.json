{
  "env": {
    "es6": true,
    "browser": true,
    "webextensions": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "no-console": "off",
    "key-spacing": "error",
    "indent": [
      "error",
      2
    ],
    "comma-spacing": "error",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "arrow-spacing": "error",
    "arrow-parens": "error",
    "keyword-spacing": "error",
    "space-infix-ops": "error",
    "semi": [
      "error",
      "always"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "space-before-blocks": "error",
    "space-before-function-paren": [
      "error",
      "never"
    ]
  }
}
