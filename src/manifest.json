{
  "manifest_version": 2,
  "name": "Facebook Don't Track Me",
  "version": "1.6.0",
  "description": "Strip Facebook track parameters and clarify url",
  "default_locale": "en",
  "icons": {
    "64": "logo64.png"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "clipboardWrite",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["lib.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib.js", "content.js"],
      "run_at": "document_start"
    }
  ],
  "applications": {
    "gecko": {
      "id": "Facebook-Dont-Track-Me@flandre.tw"
    }
  }
}
